<?xml version="1.0" encoding="us-ascii"?>
<!-- Just a test of new format -->

<experiment>
	<universe>
		<name>edu.usf.ratsim.experiment.universe.virtual.VirtUniverse</name>
		<params>
			<closeToFoodThrs>0.2</closeToFoodThrs>
			<maze>src/edu/usf/ratsim/experiment/mazes/newPlatform.xml</maze>
			<display>false</display>
			<sleep>0</sleep>
		</params>
	</universe>
	
	<robot>
		<name>edu.usf.ratsim.robot.virtual.VirtualRobot</name>
		<params>
			<noise>.2</noise>
			<lookaheadSteps>2</lookaheadSteps>
			<halfFieldOfView>3.15</halfFieldOfView>
			<visionDist>.5</visionDist>
			<closeThrs>.3</closeThrs>
		</params>
	</robot>
	
	<group>
		<name>A</name>
		<numMembers>1</numMembers>
		<subject>
			<name>edu.usf.ratsim.experiment.subject.MultiScaleArtificialPCSubject</name>
			<params>
				<step>.1</step>
				<leftAngle>0.39</leftAngle>
				<rightAngle>-0.39</rightAngle>
				<numPCLayers>3</numPCLayers>
				<numPCCellsPerLayer>100</numPCCellsPerLayer>
				<minRadius>.05</minRadius>
				<maxRadius>.3</maxRadius>
				<placeCells>exponential</placeCells>
				<numHDLayers>4</numHDLayers>
				<minHDCellsPerLayer>1</minHDCellsPerLayer>
				<stepHDCellsPerLayer>4</stepHDCellsPerLayer>
				<numIntentions>1</numIntentions>
				<deterministicActionSelection>true</deterministicActionSelection>
				<foodReward>10000</foodReward>
				<nonFoodReward>0</nonFoodReward>
				<discountFactor>1</discountFactor>
				<alpha>0.8</alpha>
				<initialValue>0</initialValue>
				<flashingReward>10000</flashingReward>
				<nonFlashingReward>10000</nonFlashingReward>
				<explorationReward>5000</explorationReward>
				<wallAvoidingVal>0</wallAvoidingVal>
				<explorationHalfLifeVal>2</explorationHalfLifeVal>
				<proportionalQL>true</proportionalQL>
				<xmin>-1</xmin>
				<ymin>-1</ymin>
				<xmax>1</xmax>
				<ymax>1</ymax>
				<closeToFoodThrs>0.2</closeToFoodThrs>
			</params>
		</subject>
		<params>
		</params>
		<tasks>
		</tasks>
	</group>
	
	<beforeTasks>
		
	</beforeTasks>
	
	<trial>
		<name>Training</name>
		<groups>
			<group>A</group>
			<group>B</group>
		</groups>
		<beforeTasks>
			<task>
				<name>edu.usf.experiment.task.EnableAllFeeders</name>
				<params>
				</params>
			</task>
		</beforeTasks>
		<episodes>
			<number>40</number>
			<beforeTasks>
				<task>
					<name>edu.usf.experiment.task.ActivateAllEnabledFeeders</name>
					<params>
					</params>
				</task>
				<task>
					<name>edu.usf.experiment.task.PlaceRobotInitally</name>
					<params>
						<point>
							<x>0</x>
							<y>0</y>
							<theta>0</theta>
						</point>
					</params>
				</task>
			</beforeTasks>
			<beforeCycleTasks>
			</beforeCycleTasks>
			<afterCycleTasks>
				<task>
					<name>edu.usf.experiment.task.ReleaseFoodFromFeeders</name>
				</task>
			</afterCycleTasks>
			<loggers>
				<logger>
					<name>edu.usf.experiment.log.SubjectPositionLogger</name>
					<params>
					</params>
				</logger>
				<logger>
					<name>edu.usf.experiment.log.WallLogger</name>
					<params>
					</params>
				</logger>
			</loggers>
			
			<afterLoggers>
				<logger>
					<name>edu.usf.experiment.log.PolicyLogger</name>
					<params>
						<interval>.1</interval>
						<angleInterval>.37</angleInterval>
						<numIntentions>1</numIntentions>
					</params>
				</logger>
			</afterLoggers>
			<afterTasks>
			</afterTasks>
			<stopConditions>
				<condition>
					<name>edu.usf.experiment.condition.MaxCycles</name>
					<params>
						<max>5000</max>
					</params>
				</condition>
				<condition>
					<name>edu.usf.experiment.condition.FoundFoodStopCond</name>
				</condition>
			</stopConditions>
			<plotters>
			</plotters>
		</episodes>
		
		<plotters>
			<plotter>
				<name>edu.usf.experiment.plot.CSVConverter</name>
			</plotter>
			<plotter>
				<name>edu.usf.experiment.plot.SummarizeRuntimes</name>
			</plotter>
			<plotter>
				<name>edu.usf.experiment.plot.PathPlotter</name>
			</plotter>
			<plotter>
				<name>edu.usf.experiment.plot.PolicyPlotter</name>
			</plotter>
		</plotters>
		<afterTasks>
		</afterTasks>
		<loggers>
		</loggers>
		
	</trial>
	
	<!-- 4 testing trials -->
	<afterTasks>
	</afterTasks>
	<loggers>
	</loggers>
	<plotters>
	</plotters>
</experiment>
