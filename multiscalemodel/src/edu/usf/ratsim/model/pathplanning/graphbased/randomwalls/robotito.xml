	<trial>
		<name>RandomWalls</name>
		<!-- Groups to apply the trial -->
		<groups>
			<group>Bug0</group>
			<group>Bug1</group>
			<group>Bug2</group>
		</groups>
		<!-- Tasks to perform beforehand -->
		<beforeTrialTasks>
			<task>
				<name>edu.usf.experiment.task.maze.SetUpEmpty</name>
				<params>
				</params>
			</task>
			<task>
				<name>edu.usf.experiment.task.platform.PublishPlatformPosition</name>
				<params>
				</params>
			</task>
		</beforeTrialTasks>
		<!-- Episodes definition -->
		<episodes>
			<!-- Number of episodes -->
			<number>3</number>
			<!-- Sleep between cycles for visualization -->
			<sleep>10</sleep>
			<!-- Tasks to perform before each episode -->
			<beforeEpisodeTasks>
