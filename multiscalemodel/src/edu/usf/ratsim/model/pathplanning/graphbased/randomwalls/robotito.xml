	</robot>
	
	<model>
		<!-- Model implementation -->
		<name>edu.usf.ratsim.model.pathplanning.graphbased.StraightAndWallFollow</name>
		<params>
			<algorithm>none</algorithm>
			<obstFoundThrs>0.15</obstFoundThrs>
		</params>
	</model>
	
	<group>
		<name>Bug1</name>
		<numMembers>32</numMembers>
		<params>
			<algorithm>bug1</algorithm>
